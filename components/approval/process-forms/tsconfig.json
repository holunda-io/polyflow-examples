{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      // relative to baseUrl
      "*": [
        "src/*",
        "src-gen/*"
      ],
      // This path is for npm linked frontend-components accessibility
      "rxjs": ["node_modules/rxjs"],
      "rxjs/*": ["node_modules/rxjs/*"],
      "@angular": [".././node_modules/@angular"],
      "@angular/*": ["node_modules/@angular/*"]
    }
  }
}
